<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_friendBackground"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#edc54c"

        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/view_friendnick_statusMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/finish_viewFriendProfile"
        android:layout_centerInParent="true"
        android:layout_marginTop="27dp"

        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="개발 6주차"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="22dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/view_friendProfileImg"

        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:src="@drawable/profile"
        app:civ_border_color="#ffffff"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/view_friendnickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/freechat_with_friend"
        android:layout_centerHorizontal="true"
        android:text="이상엽"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/finish_viewFriendProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:background="#00000000"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />


    <!--아 사이즈에 대한 것도 공부해야되 진짜.-->
    <TextView
        android:id="@+id/freechat_with_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        android:drawableTop="@drawable/chat"
        android:scaleX="0.7"

        android:scaleY="0.7"
        android:text="1:1 채팅"
        android:textAlignment="center"

        android:textScaleX="1"
        android:textSize="30dp" />


</RelativeLayout>
